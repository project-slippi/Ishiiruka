# - Find Webkit2
# Find the Webkit2 includes and library
#
#  JAVASCRIPTCORE_INCLUDE_DIR - Where to find Webkit2 include sub-directory.
#  JAVASCRIPTCORE_LIBRARIES   - List of libraries when using Webkit2.
#  JAVASCRIPTCORE_FOUND       - True if Webkit2 found.

SET( JSCORE_VERSION 4.0)

set(JAVASCRIPTCORE_INCLUDE_DIR JAVASCRIPTCORE_INCLUDE_DIR-NOTFOUND)
set(JAVASCRIPTCORE_LIBRARY JAVASCRIPTCORE_LIBRARY-NOTFOUND)
set(JAVASCRIPTCORE_LIBRARIES JAVASCRIPTCORE_LIBRARIES-NOTFOUND)

FIND_PATH(JAVASCRIPTCORE_INCLUDE_DIR JavaScriptCore/JSValueRef.h
    PATH_SUFFIXES "javascriptcoregtk-${JSCORE_VERSION}"
)

SET(JAVASCRIPTCORE_NAMES "javascriptcoregtk-${JSCORE_VERSION}")
FIND_LIBRARY(JAVASCRIPTCORE_LIBRARY
    NAMES ${JAVASCRIPTCORE_NAMES}
)

# Handle the QUIETLY and REQUIRED arguments and set JAVASCRIPTCORE_FOUND to
# TRUE if all listed variables are TRUE.
INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(
    JAVASCRIPTCORE DEFAULT_MSG
    JAVASCRIPTCORE_LIBRARY
)

IF(JAVASCRIPTCORE_FOUND)
    SET( JAVASCRIPTCORE_LIBRARIES ${JAVASCRIPTCORE_LIBRARY} )
ELSE(JAVASCRIPTCORE_FOUND)
    SET( JAVASCRIPTCORE_LIBRARIES )
ENDIF(JAVASCRIPTCORE_FOUND)

MARK_AS_ADVANCED(JAVASCRIPTCORE_LIBRARY JAVASCRIPTCORE_LIBRARIES JAVASCRIPTCORE_INCLUDE_DIR)
